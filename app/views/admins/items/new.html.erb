<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3 class= "col-3 manage">商品新規登録</h3>
      <%= form_with model:@item, url:'/admins/items', local:true do |f| %>

      <div>
         <%= f.label :商品画像 %>
         <%= f.attachment_field :image, class: "image", style: "color: #364e96; border: solid 3px #364e96; padding: 0.5em; border-radius: 0.5em;" %>
      </div>
      <div>
        <%= f.label :商品名 %>
        <%= f.text_field :item, class: "form-control item", style: "color: #364e96; border: solid 3px #364e96; padding: 0.5em; border-radius: 0.5em;" %>
      </div>
      <div>
        <%= f.label :商品説明 %>
        <%= f.text_area :item_explanation, class:"form-control item_explanation", style: "color: #364e96; border: solid 3px #364e96; padding: 0.5em; border-radius: 0.5em;" %><br>
      </div>
      <div>
        <%= f.label :ジャンル %>
    　   <%= f.collection_select :genre_id, @genres, :id, :genre_name, include_blank: "-- 選択して下さい --" %>
      </div>
      <div>

      <%= f.label :税抜価格 %>
      <%= f.text_field :price, class: "form-control price", style: "color: #364e96; border: solid 3px #364e96; padding: 0.5em; border-radius: 0.5em;" %>
      </div>
      <div>
        <%= f.label :販売ステータス %>
       	<%= f.radio_button :sale_status, true %>
        <%= f.label :sale_status, "販売中" %>
        <%= f.radio_button :sale_status, false %>
        <%= f.label :sale_status, "販売停止中" %>
      </div>

      <div class="form-group">
        <%= f.submit "新規登録", class:"btn btn-secondary" %>
        <% end %>
      </div>

    </div>
  </div>
</div>