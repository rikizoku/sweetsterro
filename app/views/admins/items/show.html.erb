<!--商品詳細ページ{Tsuyoshi}-->

<div class="container my-5">
  <div class="row">
    <h2>商品詳細</h2>
  </div>

 <!--商品投稿ページから情報を取得する為、記述。(商品投稿が完成次第有効にする){Tsuyoshi}-->

  <div class="row mt-3">
   <div class="offset-sm-1 col-sm-3">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, format: "jpeg", fallback: 'noimage.jpg', size: '200x200' %>
    </div>

    <div class="col-sm-4">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.item %></td>
          </tr>

          <tr>
            <td>商品説明</td>
            <td><%= @item.item_explanation %></td>
          </tr>

          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.genre_name %></td>
          </tr>

          <tr>
            <td>税込価格(税抜価格)</td>
            <td>
              <%=(@item.price * 1.1).floor %>(<%= @item.price %>)円
            </td>
          </tr>

          <tr>
            <td>販売ステータス</td>
              <td>
              <% if @item.sale_status == false %>
               <h7><strong class='false' style="color :#d3d3d3;">販売停止中</strong></h7>
              <% else %>
	  	         <h7><strong class='ture' style="color :limegreen;">販売中</strong></h7>
	  	        <% end %>
              </td>
          </tr>
        </tbody>

      </table>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-9 col-sm-2">
      <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-primary" %>
    </div>
  </div>
</div>
<!--商品詳細ページ{Tsuyoshi}-->