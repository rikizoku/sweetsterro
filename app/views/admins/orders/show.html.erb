<div class= "container ">
  <div class= "row py-3">
    <h5 class= "col-3 text-center p-3 mb-2 bg-light text-dark">注文履歴詳細</h5>
  </div>
</div>

  <div class="row mt-3">
    <div class="col-sm-9">
      <table class="table table-borderless">

        <tbody>
          <tr>
            <td>購入者</td>
            <td>
              <%= link_to admins_customer_path(@order.customer) do %>
              <%= @order.name %>
              <% end %>
            </td>
          </tr>

          <tr>
            <td>注文日</td>
            <td><%= @order.updated_at %></td>
          </tr>

          <tr>
            <td>配送先</td>
            <td><%= "〒" + @order.postal_code + "  " + @order.address + "  " + @order.name %></td>

          </tr>

          <tr>
            <td>支払方法</td>

            <td><%= @order.payment_method %></td>

          </tr>

          <tr>
            <td>注文ステータス</td>
            <td><%= form_with model:@order, url: admins_order_path(@order), local: true do |f| %>
                <%= f.select :status, [["入金待ち", "入金待ち"], ["入金確認","入金確認"],["製作中","製作中"],["発送準備中","発送準備中"],["発送済み","発送済み"]], class: "form-control" %>
                <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
                <% end %>
            </td>
          </tr>
        </tbody>

      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-9">

      <table class="table table-hover">
        <thead>
          <tr class="p-3 mb-2 bg-light text-dark">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <% @orders.each do |order_item| %>
          <tbody>
            <tr>
              <td><%= order_item.item.item %></td>
              <td><%= order_item.item.price * 1.1.round %></td>
              <td><%= order_item.quantity %></td>
              <td><%= (item.price * order_item.quantity * 1.1).floor %></td>
              <td>
                <%= form_with model: order_item, url: admins_order_order_item_path(@order, order_item), method: :patch, local:true do |f| %>
                  <%= f.select :production_status, [['着手不可', '着手不可'], ['製作待ち','製作待ち'], ['製作中','製作中'], ['製作完了','製作完了']] %>
                  <%= f.submit "更新", class: "btn btn-primary btn-sm ml-3" %>
                <% end %>

                </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

    <div class="col-sm-3 d-flex">
      <table class="table table-borderless align-self-end">
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= (@order.total_payment -= @order.postage).round.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>送料</td>
            <td><= @order.postage %></td>
          </tr>
          <tr>
            <td>請求合計金額</td>
            <td><= @total + @order.postage %></td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>