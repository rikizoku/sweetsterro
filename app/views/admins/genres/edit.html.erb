<div class = "container">
  <div class = "row">
      <h2 class="col-3 manage">ジャンル編集</h2>
    </div>

<%= form_with model:@genre, url:admins_genre_path(@genre), local: true do |f| %>

　　　<div class="form-group d-flex">
　　　  <%= f.label :ジャンル名 %>
　　　  <%= f.text_field :genre_name, placeholder: "ジャンル名", class:"form-control w-25", style: "color: #364e96; border: solid 3px #364e96; padding: 0.5em; border-radius: 0.5em;" %>
　　　</div>
　　　<div class="form-group-row">
　　　  <%= f.submit '変更を保存', class: "btn btn-success" %>
　　　</div>
<% end %>

　　</div>
　</div>