<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>商品新規登録</h3>
      <%= form_with model:@item, url: admin_items_path, local:true do |f| %>
      
      <div>
         <%= f.label :商品画像 %>
         <%= f.attachment_field :image %>
      </div>
      <div>
        <%= f.label :商品名 %>
        <%= f.text_field :item, class: "form-control item" %>
      </div>
      <div>
        <%= f.label :商品説明 %>
        <%= f.text_area :item_explanation, class:"form-control item_explanation" %><br>
      </div>
      <div>
        <%= f.label :ジャンル %>
    　   <!--%= f.collection_select :genre_id,items.all, :genre_id, :genre_id, include_blank: "-- 選択して下さい --" %>-->
      </div>
      <div>
        
      <%= f.label :税抜価格 %>
      <%= f.text_field :price, class: "form-control price" %>
      </div>
      <div>
        <%= f.label :販売ステータス %>
        
      </div>
     


    　

 





      <div class="form-group">
        <%= f.submit "新規登録", class:"btn btn-secondary" %>
        <% end %>
      </div>

    </div>
  </div>
</div>