 <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">


 <%= render 'homes/genre', genres: @genres %>


            </ul>
          </div>
        </div>
      </div>
  </div>


<div class='container'>
   <div class='row'>

       <h2><%= @genre.genre_name %>一覧（全<%= @items.count %>件)</h2>
       <div class= 'd-flex align-content-stretch flex-row mb-4'>
           <% @items.each do |item| %>
             <span class= "p-4">
              <%= attachment_image_tag item, :image, :fill, 120, 120 %><br />
              <%= link_to item_path(item.id) do %><%= item.item %> <% end %><br />
              <%= number_to_currency(item.price, :unit => "￥") %>
             </span>
           <% end %>
       </div>
    </div>
  </div>

<%= paginate @item_page %>