<%= form_with model:address, url:'/addresses', local:true do |f| %>
　　　<div class="form-group row">
　　　  <label>郵便番号（ハイフンなし）</label>
　　　  <%= f.text_field :postal_code, placeholder: "0000000", class:"form-control w-25 " %>
　　　</div>
　　　<div class="form-group row">
　　　  <label>住所</label>
　　　  <%= f.text_field :address, placeholder: "東京都渋谷区代々木神薗町0-0", class:"form-control w-50 " %>
　　　</div>
　　　<div class="form-group row">
　　　  <label>宛名</label>
　　　  <%= f.text_field :name, placeholder: "令和道子", class:"form-control w-25 " %>
　　　</div>
　　　<div class="form-group-row">
　　　  <%= f.submit '新規登録', class: "btn btn-success" %>
　　　</div>
　　　<% end %>