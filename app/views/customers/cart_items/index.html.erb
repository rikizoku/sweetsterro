<% @sum=0 %>
<div class= "container">
  <div class= "row">
    <div class= "col-12 mb-4">
      <h2>ショッピングカート</h2>
  </div>
</div>
<div class ="col-12 text-right">
  <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete　%>
</div>
  <div class= "col-12">
    <table class= "table table-bordered">
      <thead>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
      </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.item %></td>
        <% icom_price= cart_item.item.price*1.1 %>
        <td><%= icom_price.to_s(:delimited)%></td>
        <td>
          <%= form_with model: cart_item, local: true do |f| %>
           <%= f.number_field :quantity %>
           <%= f.submit "変更", class: "btn-success" %>
          <% end %>
        </td>

        <td><%= cart_item.cart_items_price %> </td>

        <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
        <%= @sum += cart_item.cart_items_price %>
      </tr>
      <% end %>
    </tbody>
    </table>
  <div>
    <table class= "table table-bordered col-3">
      <tbody>
        <th>合計金額</th>
       <td ><%= @sum %></td>
       </tbody>
        </table>
    </div>
  </div>
  <div class= "row">
    <div class= "col-sm-6 d-flex"><%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %></div>
    <div class= "row mt-3">
    <div class="col-12 text-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %></div>
  </div>
  </div>
  </div>
















