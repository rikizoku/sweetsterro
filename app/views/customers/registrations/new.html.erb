<div class= "container">

  <h4 class="w-25 p-1 text-center" style="background-color: #eee;">新規会員登録</h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

<div class= "container">
 <div class="row">

   <div class="d-flex form-group">
       <span class= "col-3 p-2"><%= f.label :名前, class:'name' %></span>
       <span class= "col-3 m-2"><%= f.label :（姓） %><%= f.text_field :first_name, autofocus: true, placeholder: "令和", class: "form-control" %></span>
       <span class= "col-3 m-2"><%= f.label :（名） %><%= f.text_field :last_name, autofocus: true, placeholder: "道子", class: " form-control" %></span>

   </div>

    <div class="d-flex form-group">
       <span class= "col-3 p-2"><%= f.label :フリガナ, class:'kananame' %></span>
       <span class= "col-3 m-2"><%= f.label :（セイ） %><%= f.text_field :first_name_kana, autofocus: true, placeholder: "レイワ", class: "form-control" %></span>
       <span class= "col-3 m-2"><%= f.label :（メイ） %><%= f.text_field :last_name_kana, autofocus: true, placeholder: "ミチコ", class: "form-control" %></span>

    </div>

   <div class="d-flex form-group">
      <span class= "col-3 p-2"><%= f.label :メールアドレス %></span>
      <span class= "col-3 m-2"><%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></span>
   </div>
   <div class="d-flex form-group">
      <span class= "col-3 p-2"><%= f.label :"郵便番号(ハイフンなし)" %></span>
      <span class= "col-3 m-2"><%= f.text_field :post_code, autofocus: true, placeholder: "0000000", class: "form-control" %></span>
   </div>

   <div class="d-flex form-group">
       <span class= "col-3 p-2"><%= f.label :住所 %></span>
       <span class= "col-7 m-2"><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神薗町0-0", class: "form-control" %></span>
   </div>

   <div class="d-flex form-group">
       <span class= "col-3 p-2"><%= f.label :"電話番号(ハイフンなし)" %></span>
       <span class= "col-3 m-2"><%= f.text_field :phone_number, autofocus: true, placeholder: "0000000000", class: "form-control" %></span>
   </div>

   <div class="d-flex form-group">
       <span class= "col-3 p-2"><%= f.label :"パスワード(6文字以上)" %></span>
       <span class= "col-3 m-2"><% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></span>
   </div>
   <div class="d-flex form-group">
       <span class= "col-3 p-2"><%= f.label :"パスワード(確認用)" %></span>
       <span class= "col-3 m-2"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></span>
   </div>
    <div class="actions">
        <%= f.submit "新規登録", class: "touroku btn btn-success btn-lg btn-block" %>
    </div>




    <% end %>
  </div>


    　<p class="w-25 p-1 text-center" style="background-color: #eee;"><strong>既に登録済みの方</strong></p>
      <div class='kotira'><%= link_to "こちら", new_customer_session_path %>　<span>からログインしてください。</span>  </div>
  </div>



</div>
</div>
</div>